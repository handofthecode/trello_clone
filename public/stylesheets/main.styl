@import "whitespace-reset-modified.css"
@import "mixins"
@import "dragula.css"

body
	font normal 14px Helvetica, Arial, sans-serif
	color #333
	background-color #1C67A2
	
	header h1
		text-align center
		margin 5px auto
		font-size 30px
		color #F5F6F5
	#board
		background-color #2279BF
		height 1000px
		.board_item, .list
			display inline-block
			width 270px
			margin 5px
			border-radius 3px
			vertical-align top
#list_form_toggle
	background-color #1C67A2
	padding 10px
	color #B7D1E4
	border-radius 3px
	cursor pointer
#new_list_form
	background-color #E2E4E5
	padding 4px
	display none	
	box()
	input#listName
		font-size 16px
		display block
		width 100%
		box-sizing border-box
		background rgba(0,0,0,.05)
		border-color #aaa
		box-shadow inset 0 1px 8px rgba(0,0,0,.15)
		border-radius 3px
		padding 7px
		outline none
					
#cancel,
.cancel,
.cancelEdit
	display inline-block
	padding 10px
	font normal 20px 'Arial', sans-serif;
	background-color inherit
	border none
	outline none
	color #8A9297
	cursor pointer
	transition .3s
	&:hover
		color #555
		
input[type='submit']
	width 54px
	height 30px
	border none
	background-color #53A03F
	font-weight 800
	font-size 12px
	color white
	transition: .3s
	vertical-align center
	outline none
	&:hover
		background-color #407c31

#lists
	display inline-block
.list
	background-color #E2E4E6
	border-radius 3px
	padding 5px
	box()
	h1, input[type="text"]	
		padding 5px
		display block
		font-size 14px
		font-weight 600
	.card_form_toggle
		color #4C4D4C
		cursor pointer
		padding 8px
		margin 3px -5px -5px -5px
		border-radius 3px
		&:hover
			text-decoration underline
			background-color #C3C8CB
	textarea
		font-size inherit
		display block
		width 250px
		height 50px
		resize none
		margin 0 0 5px 0
		box()
.card
	margin 5px 0 0 0
	cursor pointer
	padding 0 0 20px 0
	margin 0 0 5px 0
	background white url("../images/description.png") no-repeat 15px 25px / 12px 12px
	overflow hidden
	border-radius 3px
	box()
	&:hover
		background-color #d2e4e3
	h2
		padding 5px
		font-size 14px
		font-weight 400
		color gray
		display inline-block
	.icon_pencil
		display inline-block
		height 10px
		width 10px
		padding 5px
		margin 3px 3px 0 0
		background transparent url("../images/pencil.png") no-repeat 5px 4px / 10px 10px
		border-radius 3px
		float right
		&:hover
			background-color #C3C8CB

.hidden
form.renameCard,
.new_card_form,
#modal,
#tint
	display none
	
form.rename
	input[type="text"]
		background-color transparent
		border none
		width 92%
		font-weight 600
	input[type="text"]:focus
		background-color: white
		

.cards
	padding 5px 0 0 0
	
#modal
	background-color #EDEFF0
	height 400px
	width 550px
	position fixed
	margin auto auto
	top 0
	right 0
	bottom 0
	left 0
	z-index 3
	box()
	section
		padding 10px 10px 10px 20px
		h3
			font normal 13px Helvetica, Arial, sans-serif
			color #999
		a
			cursor pointer
			text-decoration underline
		form.rename
			input[type="text"]
				font 600 18px Helvetica, Arial, sans-serif
				color #333
			input[type="submit"]
				display none
		textarea
			display block
			height 100px
			width 450px
			box()
			padding 7px
			font-size 14px
			lineheight 18px
			resize none
			background transparent
			outline none
			
h3
	margin 0 0 10px 0

#tint
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	background rgba(0, 0, 0, .5)
	z-index 1
